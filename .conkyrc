alignment top_left
gap_x 2115
gap_y 10

double_buffer yes
background yes

default_color white
default_outline_color white
default_shade_color gray

draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no

use_xft yes
xftfont migmix1m:style=Regular:size=11

override_utf8_locale yes
out_to_console no
out_to_stderr no
extra_newline no

update_interval 1.0
uppercase no

show_graph_scale no
show_graph_range no

own_window yes
own_window_class Conky
own_window_type normal
own_window_hints undecorated,below,skip_taskbar,skip_pager,sticky
own_window_transparent no
own_window_colour 000000
own_window_argb_visual yes
own_window_argb_value 180

cpu_avg_samples 4

TEXT
${alignc}${font migmix1p:style=Regular:size=24}${time %k:%M}${font}      
${alignc}${font migmix1p:style=Regular:size=12}${time %m/%d %A}${font}

Uptime: $uptime
Load average: $loadavg
Processes: $processes Running: $running_processes

RAM Usage: $mem/$memmax
$membar
Swap Usage: $swap/$swapmax
$swapbar

File systems SDD: ${fs_used /}/${fs_size /}
${fs_bar 6 /}
File systems HDD1: ${fs_used /media/hys524/HDD2TB01/}/${fs_size /media/hys524/HDD2TB01/}
${fs_bar 6 /media/hys524/HDD2TB01/}
File systems HDD2: ${fs_used /media/hys524/HDD2TBOLD1/}/${fs_size /media/hys524/HDD2TBOLD1/}
${fs_bar 6 /media/hys524/HDD2TBOLD1/}
File systems HDD3: ${fs_used /media/hys524/0AD6-B5AA/}/${fs_size /media/hys524/0AD6-B5AA/}
${fs_bar 6 /media/hys524/0AD6-B5AA/}

${if_existing /sys/class/power_supply/BAT0/status}Battery: ${battery}
 ${battery_time}
${battery_bar}
${endif}

